                        </goals>
                        <configuration>
                            <schemaIncludes>
                                <include>jaxb/creditmessage/*.xsd</include>
                            </schemaIncludes>
                            <episodeFile>${project.build.directory}/generated-sources/xjc/META-INF/jaxb-creditmessage.episode</episodeFile>
